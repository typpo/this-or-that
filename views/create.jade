head
  include bootstrap
  script(src='/js/create.js')

div.topbar
  div.fill
    div.container
      a(href='#', style='font-family: "Spicy Rice", cursive;').brand #{title}
      ul.nav
        li.active
          a(href='#') Home
        li
          a(href='#',style='color:red;font-weight:bold;') More quizzes
        li
          a(href='#') About

div.container
  div.content
    div.page-header
      h1 #{title}
        small text
    div.row
      div.span16
        center
          span.question-header Create a quiz
        hr
        form
          div.row
            div.span10.offset3
              center
                h4 Name your two categories:
              fieldset
                div.clearfix
                  label(for='category_a') First category
                  div.input
                    input.xlarge#category_a
                div.clearfix
                  label(for='category_b') Second category
                  div.input
                    input.xlarge#category_b

          div.row
            div.span16
              center
                h4 Now paste in links to images for each category:

            div.span8
              center
                h3#title-a
              fieldset#fields-a
                div.clearfix.input
                    input.span4#category_a1(placeholder='http://...')
                div.clearfix.input
                    input.span4#category_a1(placeholder='http://...')
                div.clearfix.input
                    input.span4#category_a1(placeholder='http://...')
                div.clearfix.input
                    input.span4#category_a1(placeholder='http://...')
                div.clearfix.input
                    input.span4#category_a1(placeholder='http://...')
                div.clearfix.input
                    input.span4#category_a1(placeholder='http://...')
                div.clearfix.input
                    input.span4#category_a1(placeholder='http://...')
            div.span8
              center
                h3#title-b
              fieldset#fields-b
                div.clearfix.input
                    input.span4#category_b1(placeholder='http://...')
                div.clearfix.input
                    input.span4#category_b1(placeholder='http://...')
                div.clearfix.input
                    input.span4#category_b1(placeholder='http://...')
                div.clearfix.input
                    input.span4#category_b1(placeholder='http://...')
                div.clearfix.input
                    input.span4#category_b1(placeholder='http://...')
                div.clearfix.input
                    input.span4#category_b1(placeholder='http://...')
                div.clearfix.input
                    input.span4#category_b1(placeholder='http://...')
            div.span16
              center
                input.btn.primary(type='submit', value='Submit')


  footer
