head
  include bootstrap
  script(src='/js/main.js')

div.topbar
  div.fill
    div.container
      a(href='#', style='font-family: "Spicy Rice", cursive;').brand #{title}
      ul.nav
        li.active
          a(href='#') Home
        li
          a(href='#',style='color:red;font-weight:bold;') More quizzes
        li
          a(href='#') About

div.container
  div.content
    div.page-header
      h1 #{title}
        small text
    div.row
      div.span16
        center
          span.question-header #{groups[0]} or #{groups[1]}?
        hr
        div.row
          div.span10
            p(style='text-align:center;')
              img.bordered#main-img(code='#{code}', src='#{img}', style='text-align:center;')
          div.span6
            div.bordered.youchoose
              h1 You Choose:
              p
                h5
                  a.btn.large(href='javascript:vote(0);') #{groups[0]}
                  &raquo; #{stats[0]} people think so
              p
                h5
                  a.btn.large(href='javascript:vote(1);') #{groups[1]}
                  &raquo; #{stats[1]} people think so
            div.bordered.morequizzes
              p
                h4 More quizzes
                ul
                  li
                    a(href='#') President or grapefruit
                  li
                    a(href='#') Ivy league student or gay European
                  li
                    a(href='#') Convicted criminal or politician
            div.bordered
              center
                h4
                  a(href='/create') Create your own!



  footer
