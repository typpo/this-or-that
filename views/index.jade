head
  include bootstrap

div.topbar
  div.fill
    div.container
      a(href='#').brand #{title}
      ul.nav
        li.active
          a(href='#') Home
        li
          a(href='#') About
        li
          a(href='#') Contact

div.container
  div.content
    div.page-header
      h1 #{title}
        small text
    div.row
      div.span16
        center
          h1 #{groups[0]} or #{groups[1]}?
        div.row
          div.span10
            img(src='#{img}')
          div.span6
            h1 You Choose:
            p
              h5
                a(class='btn large') #{groups[0]}
            p
              h5
                a(class='btn large') #{groups[1]}

  footer
    p &copy; 2011
